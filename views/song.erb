<% if @song %>
  <h2>Song: <%= @song.name %></h2>
  <h3>Album: <%= @song.album.name %></h3>

  <form action="/albums/<%= @song.album.id %>/songs/<%= @song.id %>" method="post">
    <input name="_method" type="hidden" value="patch">

    <label for="name">Rename song</label>
    <input id="track" name="track" type="text" value="<%= @song.track %>" required>
    <input id="name" name="name" type="text" value="<%= @song.name %>" required>

    <button type="submit">Update song</button>
  </form>

  <form action="/albums/<%= @song.album.id %>/songs/<%= @song.id %>" method="post">
    <input name="_method" type="hidden" value="delete">

    <button type="submit">Delete song</button>
  </form>

  <p><a href="/albums/<%= @song.album.id %>">Back to <%= @song.album.name %></a></p>

<% else %>
  <h3>Looks like this song id isn't in our catalog.</h3>
  <p><a href="/">Return home</a></p>

<% end %>
