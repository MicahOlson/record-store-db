<h1>Update <%= @album.name %></h1>

<form action="/albums/<%= @album.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="album_name">Rename album</label>
    <input id="edit_album_name" name="album_name" class="form-control" type="text" value="<%= @album.name %>" required>
  </div>
  <button type="submit">Update</button>
</form>

<form action="/albums/<%= @album.id %>" method="post">
  <input name="_method" type="hidden" value="delete" required>
  <button type="submit">Delete album</button>
</form>

<p><a href="/albums">Return to album list</a></p>
