<h1>Update <%= @artist.name %></h1>

<form action="/artists/<%= @artist.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="artist_name">Rename artist</label>
    <input id="edit_artist_name" name="artist_name" class="form-control" type="text" value="<%= @artist.name %>" required>
  </div>
  <button type="submit">Update</button>
</form>

<form action="/artists/<%= @artist.id %>" method="post">
  <input name="_method" type="hidden" value="delete" required>
  <button type="submit">Delete artist</button>
</form>

<p><a href="/artists">Return to artist list</a></p>
